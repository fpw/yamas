{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "esnext"
        ],
        "types": [
            "vitest/globals"
        ],
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "incremental": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
    },
    "include": [
        "src/",
        "test/",
        "vite.config.ts"
    ],
}
